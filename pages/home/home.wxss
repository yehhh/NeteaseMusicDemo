#head {
  position: fixed;
  width: 100%;
  top: 0;
  left: 0;
  display: flex;
}
/**
tab
 */
.tab {
  background-color: #BB2C08;
  z-index: 999;
}
.tab > view {
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  flex: auto;
}
.tab > view > text {
  color: #efefef;
  font-size: 25rpx;
  height: 60rpx;
  display: inline-block;
}
.tab > navigator {
  flex: 0 0 70rpx;
  padding-top: 20rpx;
}
.tab .isTab {
  color: #fff;
  border-bottom: 1px solid #fff;
}
